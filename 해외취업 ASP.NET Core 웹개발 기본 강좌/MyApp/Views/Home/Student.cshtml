@model StudentTeacherViewModel;
@{
    ViewBag.Title = "Student";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <div style="flex: 0 0 30%;">
            <h2>학생 등록</h2>
            <hr />
            <form asp-antiforgery=true method="post">
                <div class="form-group">
                    <label>이름 : </label>
                    <input type="text" class="form-control" asp-for="Student.Name" /> 
                    <span asp-validation-for="Student.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>나이 : </label>
                    <input type="text" class="form-control" asp-for="Student.Age" /> 
                    <span asp-validation-for="Student.Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>국적 : </label>
                    <input type="text" class="form-control" asp-for="Student.Country" /> 
                    <span asp-validation-for="Student.Country"  class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">등록</button>
                </div>
            </form>
        </div>
    </div>

    @await Html.PartialAsync("_StudentTable", @Model)
</div>